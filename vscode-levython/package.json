{
    "name": "levython",
    "displayName": "Levython - Complete Language Support",
    "description": "Full language support for Levython - syntax highlighting, IntelliSense, 100+ snippets for OS automation, async/await, HTTP, crypto, and more",
    "version": "1.0.3",
    "publisher": "levython",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters"
    ],
    "keywords": [
        "levython",
        "levy",
        "programming",
        "jit",
        "fast",
        "systems-programming",
        "os-automation",
        "async",
        "http",
        "crypto"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/levython/Levython"
    },
    "contributes": {
        "languages": [
            {
                "id": "levython",
                "aliases": ["Levython", "levython", "levy"],
                "extensions": [".levy", ".ly"],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icons/levython-icon.png",
                    "dark": "./icons/levython-icon.png"
                }
            }
        ],
        "iconThemes": [
            {
                "id": "levython-icons",
                "label": "Levython Icons",
                "path": "./icons/levython-icon-theme.json"
            }
        ],
        "grammars": [
            {
                "language": "levython",
                "scopeName": "source.levython",
                "path": "./syntaxes/levython.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "levython",
                "path": "./snippets/levython.json"
            }
        ],
        "configurationDefaults": {
            "[levython]": {
                "editor.tabSize": 4,
                "editor.insertSpaces": false,
                "editor.detectIndentation": true,
                "editor.formatOnType": true,
                "editor.autoIndent": "full",
                "editor.semanticHighlighting.enabled": true,
                "editor.wordBasedSuggestions": "matchingDocuments",
                "editor.quickSuggestions": {
                    "other": true,
                    "comments": false,
                    "strings": true
                },
                "editor.suggest.snippetsPreventQuickSuggestions": false
            }
        }
    }
}
