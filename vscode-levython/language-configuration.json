{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*((\\bact\\b|\\bif\\b|\\belse\\b|\\bwhile\\b|\\bfor\\b|\\bclass\\b|\\btry\\b|\\bcatch\\b).*|\\{|\\[)\\s*$",
        "decreaseIndentPattern": "^\\s*(\\}|\\]|\\belse\\b|\\bcatch\\b).*$"
    },
    "folding": {
        "markers": {
            "start": "^\\s*#\\s*region\\b",
            "end": "^\\s*#\\s*endregion\\b"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "onEnterRules": [
        {
            "beforeText": "^\\s*(?:act|if|else|while|for|class|try|catch).*:\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*#.*$",
            "action": { "indent": "none", "appendText": "# " }
        }
    ]
}
