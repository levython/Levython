# Windows Installer Configuration
# This config is used by the build script

[Setup]
AppName=Levython
AppVersion=1.0.1
Publisher=Levython Project
Website=https://github.com/levython/Levython

[Branding]
PrimaryColor=#0D47A1
SecondaryColor=#1976D2
IconLetter=L

[Features]
EnableDesktopIcon=true
EnableStartMenu=true
EnableFileAssociation=true
EnablePathIntegration=true
EnableVSCodeExtension=true

[Requirements]
MinWindowsVersion=10.0.14393
Architecture=x64
RequireAdmin=false
